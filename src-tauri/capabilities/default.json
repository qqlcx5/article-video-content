{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "path:default",
    "dialog:open",
    "dialog:save",
    { "identifier": "fs:allow-read-text-file", "allow": [{ "path": "$HOME/**" }, { "path": "$APPDATA/**" }, { "path": "$APPLOCALDATA/**" }] },
    { "identifier": "fs:allow-write-text-file", "allow": [{ "path": "$HOME/**" }, { "path": "$APPDATA/**" }, { "path": "$APPLOCALDATA/**" }] },
    { "identifier": "fs:allow-exists", "allow": [{ "path": "$HOME/**" }, { "path": "$APPDATA/**" }, { "path": "$APPLOCALDATA/**" }] },
    { "identifier": "fs:allow-mkdir", "allow": [{ "path": "$APPDATA/**" }, { "path": "$APPLOCALDATA/**" }] },
    { "identifier": "fs:allow-rename", "allow": [{ "path": "$APPDATA/**" }, { "path": "$APPLOCALDATA/**" }] },
    { "identifier": "fs:allow-remove", "allow": [{ "path": "$APPDATA/**" }, { "path": "$APPLOCALDATA/**" }] }
  ]
}
